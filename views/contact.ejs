<%- include('head') %>
    <meta name="description" content="Contact Information of the Travel Experts Agency & Individual Travel Agents">
    <title>Contact Us - Travel Experts</title>
    <link rel="stylesheet" href="contact.css"/>
<%- include('header') %>

<br>
    <div class="main-content" style="min-height: 0;">
    <div class="grid">
    <h3>About Us...</h3>

    <!--A breif introduction about the client with two links , one directing to 404 page-->
    <p class="para" >The Travel Experts are here to make your dreams of a perfect vacation come true. 
                     We offer customized services and the top deals in the market so you can save money and
                     time to focus on what's important: exploring new places!</p>
    </div><div class="grid">
        
        <!--Pulling data from agencies table-->
        <% agencies.forEach((agencies)=>{ %>
            <h3>Get in contact with our <%= agencies.AgncyCity %>  team!</h3>
            <ul class="contactlist">
                <li class="contactlistitem"><span class="contactbody">Call us at (<%= agencies.AgncyPhone.slice(0, 3) %>)-<%= agencies.AgncyPhone.slice(3, 6) %>-<%= agencies.AgncyPhone.slice(6, 10) %></span></li>
                <li class="contactlistitem"><span class="contactbody">Email us at <a href="mailto:customer.service@gatortravels.ca" class="linkcolour">customer.service@gatortravels.ca</a></span></li>
                <li class="contactlistitem"><span class="contactbody">Visit our office on <%= agencies.AgncyAddress %>, <%= agencies.AgncyCity %> <%= agencies.AgncyProv %>, <%= agencies.AgncyCountry %></span></li>      
            </ul>
        <% }); %>

</div></div>
  
<div class="main-content">
    <table>
            <tr><th colspan="3">Get in Touch</th></tr>
                <% result.forEach((result)=>{ %> 
            <tr>
                <td><%= result.agtFirstName %> <%= result.agtLastName %></td>
                <td><%= result.agtBusPhone %></td><td><a style="color:var(--charcoal)" href="mailto:<%= result.AgtEmail %>"><%= result.AgtEmail %></a></td>
            </tr>
            <% }); %>
    </table>
</div>
    
        <%- include('footer') %>
</body>
</html>